@model MoviesAdapters.Model.Movie
<h2>@ViewBag.Message</h2>

<form method="post">
    <h4>@Html.LabelFor(x => x.Title)</h4>
    <h4>@Html.TextBoxFor(x => x.Title)</h4>

    <h4>@Html.LabelFor(x => x.DateReleased)</h4>
    <h4>@Html.TextBoxFor(x => x.DateReleased)</h4>

    @Html.HiddenFor(x => x.DirectorId) <!--this is needed for AddMovie-->
    @Html.HiddenFor(x => x.MovieId) <!--this is needed for EditMovie-->

    <button type="submit" class="btn btn-default">Submit</button>
</form>

